@media only screen and (max-width: 600px) {#main {margin-left: 0}}

    
    a {
      text-decoration: none;
      font-size: 22px;
      color: rgb(12, 12, 12);
    }
    
    button:hover, a:hover {
      opacity: 0.7;
    }
</style>

</head>
